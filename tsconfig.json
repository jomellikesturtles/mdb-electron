{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    // "allowJs": true,
    // "checkJs": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "types": ["node","mocha","jest"],
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@components/*": [
        "app/components/*"
      ],
      "@constants/*": [
        "app/constants/*"
      ],
      "@directives/*": [
        "app/directives/*"
      ],
      "@guards/*": [
        "app/guards/*"
      ],
      "@mock/*": [
        "app/mock/*"
      ],
      "@models/*": [
        "app/models/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
    }
  },
  "exclude": [
    ".git",
    ".app-cache",
    ".npm",
    ".npm-tmp",
    "dist",
    "dist*",
    "node_modules",
    "subfolder/dist",
    "subfolder/node_modules",
    "**/dist/*",
    "**/node_modules/*",
  ]
}
