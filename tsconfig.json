{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // "allowJs": true,
    // "checkJs": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "types": ["node", "mocha", "jest"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["app/components/*"],
      "@constants/*": ["app/constants/*"],
      "@core/*": ["app/core/*"],
      "@directives/*": ["app/directives/*"],
      "@environments/*": ["environments/*"],
      "@guards/*": ["app/guards/*"],
      "@mocks/*": ["app/mock/*"],
      "@models/*": ["app/models/*"],
      "@modules/*": ["app/modules/*"],
      "@services/*": ["app/services/*"],
      "@shared/*": ["app/shared/*"],
      "@utils/*": ["app/utils/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableIvy": true
  },
  "exclude": [
    ".git",
    ".app-cache",
    ".npm",
    ".npm-tmp",
    "dist",
    "dist*",
    "node_modules",
    "subfolder/dist",
    "subfolder/node_modules",
    "**/dist/*",
    "**/node_modules/*",
    "src/stories/*",
    "src/stories"
  ]
}
